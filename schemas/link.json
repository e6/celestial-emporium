{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://emporium.pudo.org/schemas/link.json#",
  "title": "Link",
  "description": "A URL",
  "type": "object",
  "properties": {
    "url": {
      "description": "A URL",
      "type": "string",
      "format": "uri",
      "required": true
    },
    "note": {
      "description": "A note, e.g. 'Wikipedia page'",
      "type": ["string", "null"]
    }
  }
}
